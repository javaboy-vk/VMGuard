{
  "vmguard": {
    "name": "VMGuard",
    "version": "1.0",
    "rootMode": "relative",
    "environment": "HERCULES-ATLAS"
  },
  "paths": {
    "logs": "logs",
    "run": "run",
    "diagnostics": "diagnostics",
    "install": "install",
    "devHarness": "dev-harness",
    "services": "services",
    "sentinel": "preshutdown_sentinel",
    "guard": "guard",
    "watcher": "watcher"
  },
  "services": {
    "guard": {
      "name": "VMGuard-Guard",
      "displayName": "VMGuard Guard Service",
      "script": "guard\\vmguard-service.ps1",
      "stopScript": "guard\\vmguard-guard-stop-event-signal.ps1"
    },
    "sentinel": {
      "name": "VMGuard-Preshutdown-Sentinel",
      "displayName": "VMGuard Preshutdown Sentinel"
    },
    "logMerge": {
      "name": "VMGuard-LogMerge",
      "displayName": "VMGuard LogMerge"
    }
  },
  "tasks": {
    "userShutdown": {
      "folder": "\\Protepo\\VMGuard",
      "name": "VMGuard-User-Shutdown-Delegate",
      "script": "guard\\vm-smooth-shutdown.ps1"
    }
  },
  "events": {
    "guardStop": "Global\\VMGuard_Guard_Stop",
    "systemStop": "Global\\VMGuard_STOP"
  },
  "diagnostics": {
    "environmentDumpPrefix": "vmguard-env-dump",
    "retainDays": 30
  },
  "logging": {
    "defaultLevel": "INFO",
    "timestampFormat": "yyyy-MM-dd HH:mm:ss",
    "separator": "===========================================",
    "levelTokens": {
      "INFO": "INFO",
      "WARN": "WARN",
      "ERROR": "ERROR"
    },
    "normalize": {
      "Information": "INFO",
      "Info": "INFO",
      "Warning": "WARN",
      "Warn": "WARN",
      "Error": "ERROR",
      "ERR": "ERROR"
    }
  }
}